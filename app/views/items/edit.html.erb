<h3 align="right"><%= render partial: 'partials/merch_header' %>&emsp;</h3>

<h3>Edit Item</h3><br/>
<%= form_with url:"/items/#{@item.id}", method: :patch, local: true do |f| %>
  <%= f.label 'Name' %>
  <%= f.text_field :name, value: @item.name  %><br/><br/>

  <%= f.label 'Description' %>
  <%= f.text_area :description, value: @item.description %><br/><br/>

  <%= f.label 'Unit Price $' %>
  <%= f.number_field :unit_price, value: "#{@item.unit_price}" %><br/><br/>

  <%= f.label 'Status' %>
  <%= f.select :able, ["Disabled", "Enabled"], value: @item.able %><br/><br/>

  <%= f.submit 'Submit Edit' %>
<% end %>
